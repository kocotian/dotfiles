#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	2) setsid -f "$TERMINAL" -e htop ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs.
- Middle click to open htop." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

MEM="$(free --mebi | sed -n '2{p;q}')"
COL="$(if [ "$(echo $MEM | cut -f3 -d' ')" -lt 0.90 ]; then
	echo2
elif [ "$(echo $MEM | cut -f3 -d' ')" -gt 2.50 ]; then
	echo1
elif [ "$(echo $MEM | cut -f3 -d' ')" -gt 1.00 ]; then
	echo3
fi)"
echo "$MEM" | awk "{printf (\"ðŸ§  $COL%2.2fGiB / %2.2fGiB\\n\", (\$3 / 1024), (\$2 / 1024))}"
